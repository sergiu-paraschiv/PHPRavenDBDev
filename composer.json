{
	"name": "php-ravendb",
	"description": "PHP RavenDB connector",
	"require": {
        "php": ">=5.4.14",
        "phpcs-fixer": "1.4-dev",
        "pdepend/pdepend" : "1.1.1",
        "phpmd/phpmd" : "1.4.*",
		"phpunit/phpunit": "3.7.*",
        "doctrine/inflector": "1.0.*@dev"        
	},
	
	"repositories": [
        {
            "type": "package",
            "package": {
                "name": "phpcs-fixer",
                "version": "1.4-dev",
                "dist": {
                    "url": "https://github.com/squizlabs/PHP_CodeSniffer/archive/phpcs-fixer.zip",
                    "type": "zip"
                },
                "bin": [
                    "scripts/phpcs",
                    "scripts/phpcbf"
                ]
            }
        }
    ],
	
	"autoload": {
		"classmap": [
			"app/SergiuParaschiv",
            "app/tests/SergiuParaschiv"
		]
	}
}
